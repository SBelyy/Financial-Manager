<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EditDebtActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_style"
        android:elevation="2dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:onClick="backToInform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/button_back" />

            <ImageView
                android:onClick="done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/button_done" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:textSize="@dimen/activity_text_size"
                android:textColor="@color/colorBlack"
                android:text="@string/sum"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:textSize="@dimen/activity_text_size"
                android:textColor="@color/colorBlack"
                android:text=": "/>

            <EditText
                android:id="@+id/editRefillSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="9"
                android:fontFamily="@font/roboto_thin"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/colorBlack95"
                android:textCursorDrawable="@color/colorBlack"
                android:textColorLink="@color/colorBlack"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:textSize="@dimen/activity_text_size"
                android:textColor="@color/colorBlack"
                android:text="@string/comment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:textSize="@dimen/activity_text_size"
                android:textColor="@color/colorBlack"
                android:text=": "/>

            <EditText
                android:id="@+id/editReductionComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="120"
                android:fontFamily="@font/roboto_thin"
                android:inputType="textPersonName"
                android:backgroundTint="@color/colorBlack95"
                android:textCursorDrawable="@color/colorBlack"
                android:textColorLink="@color/colorBlack"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>