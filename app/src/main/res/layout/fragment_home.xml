<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/white_style"
        android:elevation="2dp"
        android:outlineProvider="background"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_text_size"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:gravity="left"
                android:text="@string/total_amount"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/general_sum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_thin"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/activity_text_size"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="right"
                    android:text="0"/>

            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_thin"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="BYN"
                android:paddingRight="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack95"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_text_size"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:gravity="left"
                android:text="@string/total_dept"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textGM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_thin"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/activity_text_size"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="right"
                    android:text="0"/>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_thin"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="BYN"
                android:paddingRight="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_text_size"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:gravity="left"
                android:text="@string/total_i_dept"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textIG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_thin"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/activity_text_size"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="right"
                    android:text="0"/>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_thin"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="BYN"
                android:paddingRight="10dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_text_size" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/white_style"
        android:elevation="2dp"
        android:outlineProvider="background"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textRemove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:onClick="removeClick"
            android:background="@drawable/button_remove" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textInSecondLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_text_size"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:text="@string/second_slide_info1"/>

            <TextView
                android:id="@+id/textInSecondLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_text_size"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:text="@string/second_slide_info2"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="plusClick"
            android:layout_weight="25"
            android:background="@drawable/button_add"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/white_style"
        android:elevation="2dp"
        android:outlineProvider="background"
        android:gravity="center_vertical"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textInThreeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_text_size"
            android:onClick="showStatistics"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:text="@string/statistics"/>

    </LinearLayout>

</LinearLayout>