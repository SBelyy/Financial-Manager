<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/white_style"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_thin"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/activity_text_size"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:text="Ноябрь 27, 2000, 10.30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/activity_text_size"
            android:layout_gravity="center"
            android:text="@string/child"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sum_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/activity_text_size"
                android:text="560"/>

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/activity_text_size"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:text="BYN"/>

    </LinearLayout>

    <TextView
        android:id="@+id/comment_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_thin"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/activity_text_size"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:text="Тут отображается комментарий, который оставили люди"/>

</LinearLayout>